<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:src="@drawable/icon_profile_1">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:text="E-mail Address"
            android:textColor="#ACACAC"
            android:textSize="17dp"
            android:paddingLeft="17dp">
        </TextView>

        <TextView
            android:id="@+id/e_mail_address_info_text_view"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text=""
            android:textColor="#FF8A8A"
            android:textSize="17dp"
            android:paddingRight="17dp">
        </TextView>
    </RelativeLayout>

    <EditText
        android:id="@+id/e_mail_address_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="15dp"
        android:hint="example@email.com"
        android:textSize="17dp"
        android:textColor="#ACACAC"
        android:background="@drawable/custom_edge"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/icon_email_address_custom"
        android:inputType="textEmailAddress">
    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:text="Password"
            android:textColor="#ACACAC"
            android:textSize="17dp"
            android:paddingLeft="17dp">
        </TextView>

        <TextView
            android:id="@+id/password_info_text_view"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text=""
            android:textColor="#FF8A8A"
            android:textSize="17dp"
            android:paddingRight="17dp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:paddingLeft="15dp"
            android:hint="123456789"
            android:textSize="17dp"
            android:textColor="#ACACAC"
            android:background="@drawable/custom_edge"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/icon_lock_custom"
            android:inputType="textPassword">
        </EditText>

        <ImageButton
            android:id="@+id/password_open_close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_password_close"
            android:layout_marginTop="12dp"
            android:layout_marginRight="63dp"
            android:layout_alignParentRight="true"
            android:gravity="right">
        </ImageButton>
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="125dp"
        android:layout_marginLeft="125dp"
        android:text="Login">
    </Button>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="125dp"
        android:layout_marginLeft="125dp"
        android:text="Register">
    </Button>
</LinearLayout>